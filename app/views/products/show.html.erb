<h2><%= @product.name %></h2>
<br>
<div class="product-image">
  <img src="<%= @product.image %>" alt="" />
</div>
<h4>PRODUCT INFORMATION</h4>
<h4>Unit Cost: <%= number_to_currency(@product.cost) %></h4>
<h4>Country of Origin: <%= @product.country_origin %></h4>
<h4>Ingredients: <%= @product.ingredients %></h4>
<br>
<%= link_to "Edit Product", edit_product_path(@product), class: "btn" %>
<%= link_to "Delete Product", product_path(@product), :data => {:confirm => "are you sure?", :method => "delete"}, class: "btn" %>
